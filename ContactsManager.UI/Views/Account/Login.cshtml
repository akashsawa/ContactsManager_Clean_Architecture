@model LoginDTO
@* strongly typed view *@
@{
    ViewBag.Title = "Login";
    ViewBag.CurrentUrl = "~/Account/Login";
}

<div class="text-grey">
    <span>Contacts</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>LOGIN</span>
</div>

<div class="form-container">
    Not Yet Registered? <a asp-action="Register" asp-controller="Account" class="link-hover">Register</a>

    <h2 class="text-large">Login</h2>

    @* returnurl *@
    <form asp-controller="Account" asp-action="Login" method="post" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
        @* returnurl *@

        

        @* email *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Email">E-mail</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
            </div>

            <span asp-validation-for="Email" class="text-red"></span>
        </div>

        @* password *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Password">Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="Password" class="form-input" />
            </div>

            <span asp-validation-for="Password" class="text-red"></span>
        </div>

        

        @* login button *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-blue-back" type="submit">LOGIN</button>

                <div asp-validation-summary="All" class="text-red"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class=text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>

                }
            </div>
        </div>


    </form>
</div>

