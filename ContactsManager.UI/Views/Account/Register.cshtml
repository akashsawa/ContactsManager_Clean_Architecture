@model RegisterDTO
@* strongly typed view *@
@{
    ViewBag.Title = "Register";
    ViewBag.CurrentUrl = "~/Account/Register";
}

<div class="text-grey">
    <span>Contacts</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>REGISTER</span>
</div>

<div class="form-container">
    Already Registered? <a asp-action="Login" asp-controller="Account" class="link-hover">Login</a>

    <h2 class="text-large">Register</h2>
    <form asp-controller="Account" asp-action="Register" method="post">

        @* personname *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="PersonName">Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" />
            </div>

            <span asp-validation-for="PersonName" class="text-red"></span>
        </div>

        @* email *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Email">E-mail</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
            </div>

            <span asp-validation-for="Email" class="text-red"></span>
        </div>

        @* password *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Password">Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="Password" class="form-input" />
            </div>

            <span asp-validation-for="Password" class="text-red"></span>
        </div>

        @* confirmpassword *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="ConfirmPassword">Confirm Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="ConfirmPassword" class="form-input" />
            </div>

            <span asp-validation-for="ConfirmPassword" class="text-red"></span>
        </div>

        @* phone number *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Phone">Phone Number</label>
            </div>
            <div class="flex-1">
                <input asp-for="Phone" class="form-input" />
            </div>

            <span asp-validation-for="Phone" class="text-red"></span>
        </div>

        @* User type *@
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="UserType">User Type</label>
            </div>
            <div class="flex-1">
                <input type="radio" asp-for="UserType" class="form-input" id="User" value="User" checked />
                <label for="User" >User</label>

                <input type="radio" asp-for="UserType" class="form-input" id="Admin" value="Admin" />
                <label for="Admin">Admin</label>
            </div>

            <span asp-validation-for="Phone" class="text-red"></span>
        </div>

        @* register button *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-green-back" type="submit">REGISTER</button>

                <div asp-validation-summary="All" class="text-red"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class=text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>

                }
            </div>
        </div>


    </form>
</div>

